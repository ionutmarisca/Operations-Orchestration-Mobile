<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/runParent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground">

    <ImageView
        android:id="@+id/stepIcon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/checked" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/stepNameLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="90dp"
        android:layout_marginTop="16dp"
        android:gravity="center_vertical"
        android:text="@string/step_name"
        android:textAppearance="?android:textAppearanceListItem"
        android:textSize="20sp" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/stepResultLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/stepNameLayout"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/stepNameLayout"
        android:gravity="center_vertical"
        android:paddingBottom="16dp"
        android:text="@string/step_result"
        android:textStyle="bold" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignEnd="@+id/stepResultLayout"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="15dp"
        android:background="#E0E0E0" />

</RelativeLayout>